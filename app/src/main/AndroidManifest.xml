<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.poong.primarystudentmonitoringassistantsystem">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notifications_grey_24dp" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity android:name=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2" />
        <activity
            android:name=".Attendance.AttendanceActivity"
            android:label="@string/title_activity_attendance"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentDetail"
            android:label="@string/title_activity_student_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ParentDetail" />
        <activity android:name=".Chat.ChatMessageActivity" />
        <activity android:name=".Teacher.TeacherList" />
        <activity android:name=".Students.StudentList" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".StudentDetailPackage.StudentActivity" />
        <activity android:name=".Teacher.TeacherProfile" />
        <activity android:name=".StudentDetailPackage.AddNoteActivity" />
        <activity android:name=".Students.StudentListAtParentView"></activity>
        <activity android:name=".Parent.ParentProfile"/>
    </application>

</manifest>